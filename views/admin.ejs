  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #080808;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    main {
      padding: 20px;
      background-color: #333;
      border-radius: 10px;
      text-align: center;
    }

    h1 {
      color: orange;
    }

    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      box-sizing: border-box;
      border: 1px solid #000;
      border-radius: 5px;
    }

    button {
      width: 100%;
      padding: 10px;
      background-color: orange;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: white;
      color: black;
    }
  </style>
